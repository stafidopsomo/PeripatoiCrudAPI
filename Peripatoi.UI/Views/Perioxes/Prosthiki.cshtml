@model Peripatoi.UI.Models.ProsthikiPerioxhsViewModel

@{
    ViewData["Title"] = "Προσθήκη Περιοχής";
}

<h1 class="mt-4 mb-3 text-primary">Προσθήκη Περιοχής</h1>

<form method="post" class="bg-light p-4 rounded shadow-sm">
    <div class="mb-3">
        <label class="form-label">Κωδικός</label>
        <input type="text" class="form-control" asp-for="Kwdikos" />
    </div>

    <div class="mb-3">
        <label class="form-label">Όνομα</label>
        <input type="text" class="form-control" asp-for="Onoma" />
    </div>

    <div class="mb-3">
        <label class="form-label">Σύνδεσμος Εικόνας</label>
        <input type="text" class="form-control" asp-for="EikonaUrl" />
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Αποθήκευση Περιοχής</button>
    </div>
</form>

<style>
    h1 {
        font-family: 'Arial', sans-serif;
        font-size: 2.5rem;
    }

    .btn-primary {
        font-size: 1rem;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: .25rem;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075) !important;
    }
</style>
